<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Trạng thái khi được nhấn -->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/teal_200" /> <!-- Màu nền khi được nhấn -->
            <stroke android:width="2dp" android:color="@color/black" /> <!-- Viền -->
            <corners android:radius="4dp" /> <!-- Góc bo tròn (tuỳ chọn) -->
        </shape>
    </item>

    <!-- Trạng thái mặc định -->
    <item>
        <shape>
            <solid android:color="@color/gray" /> <!-- Màu nền mặc định -->
            <stroke android:width="2dp" android:color="@color/black" /> <!-- Viền -->
            <corners android:radius="4dp" /> <!-- Góc bo tròn (tuỳ chọn) -->
        </shape>
    </item>
</selector>