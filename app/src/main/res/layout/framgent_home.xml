<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">
        <LinearLayout
            android:id="@+id/linea_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           >
    <SearchView
        android:id="@+id/search_view"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:background="@drawable/bocong"
        android:foregroundTint="#3F51B5"
        android:iconifiedByDefault="false"
        android:inputType="none"

        android:paddingLeft="-8dp"
        android:paddingRight="-8dp"
        android:queryBackground="@android:color/transparent"
        android:queryHint="@string/search_hint"
    />
        </LinearLayout>

        <ImageView
            android:id="@+id/img_gio_hang"
            android:layout_marginTop="10dp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:background="@color/white"
            android:contentDescription="@string/app_name"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:src="@drawable/add_shopping_cart" />

    </LinearLayout>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_top"
        android:layout_width="match_parent"
        android:layout_height="40dp"

        android:background="@color/white"
        android:contentDescription="@string/app_name"
        app:tabIndicatorColor="@color/black"
        app:tabTextColor="@color/black" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_home"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@+id/tab_top"
        android:contentDescription="@string/app_name"
        tools:ignore="TextPresentCheck" />
</LinearLayout>