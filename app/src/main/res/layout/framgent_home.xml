<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">
        <LinearLayout
            android:id="@+id/linea_search"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bocong"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_search_24"
                android:padding="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bạn đang tìm kiếm sản phẩm gì?"
                android:layout_gravity="center"
                android:textColor="@color/gray"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/img_gio_hang"
            android:layout_marginTop="10dp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="15dp"
            android:background="@color/white"
            android:contentDescription="@string/app_name"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:src="@drawable/add_shopping_cart" />


    </LinearLayout>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_top"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:contentDescription="@string/app_name"
        app:tabIndicatorColor="@color/black"
        app:tabTextColor="@color/black" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_home"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@+id/tab_top"
        android:contentDescription="@string/app_name"
        tools:ignore="TextPresentCheck" />
</LinearLayout>