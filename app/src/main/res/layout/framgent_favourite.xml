<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#F1F1F1"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/item_favỏite"
            android:layout_centerVertical="true"
            android:padding="20dp"
            android:textColor="@color/black"
            android:textSize="20sp"/>
        <ImageView
            android:id="@+id/img_gio_hang"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginRight="20dp"
           android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/add_shopping_cart"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:background="@color/white">
        <TextView
            android:id="@+id/tv_so_luong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 "
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:textSize="13sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tiente"
            android:layout_marginLeft="9dp"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:textSize="13sp"
           />
        <ImageView
            android:id="@+id/imv_chinh_sua"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/edit_pen"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/img_nen"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/anh_nen" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_list_favourite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"/>


    </RelativeLayout>
    </LinearLayout>